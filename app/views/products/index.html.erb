<% provide(:title, "Products") %>
<div class="container">
  <div class="row">
    <div class="col-12 mg-t">
      <h2>
        <%= t ".product" %>
        <span class="float-right btn btn-primary" id="filter">Filter</span>
      </h2>
      <hr>
    </div>
    <div class="col-12" id="formFilter">
      <%= render "shared/form_search" %>
      <br>
      <%= search_form_for @filter,  url: search_products_path,
          html: { method: :post } do |f| %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <a class="btn btn-outline-dark"><%= t ".price" %></a>
            </div>
            <%= f.search_field :price_gteq, class: "form-control", placeholder: t(".min_price") %>
            <%= f.search_field :price_lteq, class: "form-control", placeholder: t(".max_price") %>
            <div class="input-group-prepend">
              <a class="btn btn-outline-dark"><%= t ".category" %></a>
            </div>
            <%= f.select :category_id_eq,
                  options_from_collection_for_select(@categories, "id", "name"),
                  {include_blank: t(".pick some one")},
                  {class: "form-control"} %>
            <div class="input-group-prepend">
              <a class="btn btn-outline-dark"><%= t ".sort" %></a>
            </div>
            <%= f.sort_fields do |s| %>
              <%= s.sort_select %>
            <% end %>
            <div class="input-group-prepend">
              <%= f.submit t(".go"), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: "product", collection: @products, as: :product %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <%= paginate @products %>
  </div>
</div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      Goi y mon moi
    </div>
    <%= render "shared/form_suggest" %>
  </div>
</div>