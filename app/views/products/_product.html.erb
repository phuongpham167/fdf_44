<div class="column">
  <div class="demo-title"></div>
  <div class="post-module">
    <div class="thumbnail">
    <%= load_new_product product %>    
    <%= image_tag "photo.jpeg" %>
    </div>
    <div class="post-content">
      <div class="category"><%= product.category_name %></div>
      <h2 class="sub_title"><%= product.name %></h2>
      <h2 class="price"><%= t(:money).html_safe + " " + product.price.to_s %></h2>
      <p class="descriptions">
        <%= truncate product.descriptions, length: Settings.sort_descriptions %>
        <%= link_to t(".read_more"), product %>
      </p>
      <div class="post-meta">
        <span class="timestamp">
          <a href="#" class="btn btn-sm"><%= t ".cart" %></a>
          <a href="#" class="btn btn-sm"><%= t ".favourite" %></a>
        </span>
        <span class="comments">
          <i class="fa fa-comments"></i><%= t ".rating" %> 
          <a href="#"><%= product.average_point %>/5</a>
        </span>
      </div>
    </div>
  </div>
</div>
