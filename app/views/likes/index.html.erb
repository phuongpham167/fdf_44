<% provide(:title, "Your favorite") %>
<div class="container container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <% @likes.each do |like| %>
        <%= link_to product_path(like.product.id) do %>
          <div class="column">
            <div class="demo-title"></div>
            <div class="post-module">
              <div class="thumbnail">
                <%= image_tag like.product.images.first.image_link %>
              </div>
              <div class="post-content">
                <div class="category"><%= like.product.category_name %></div>
                <h2 class="sub_title"><%= like.product.name %></h2>
                <h2 class="price"><%= t("money").html_safe + " " + like.product.price.to_s %></h2>
                <p class="descriptions">
                  <%= truncate like.product.descriptions || t(".no_descriptions"), length: Settings.sort_descriptions %>
                  <%= link_to t(".read_more"), like.product %>
                </p>
                <div class="post-meta">
                  <span class="timestamp" >
                    <%= link_to t(".cart"), add_cart_path(like.product), class: "btn btn-sm" %>
                    <span id="like-icon-product-<%= like.product.id.to_s%>">
                      <% if like.product.is_liked(current_user.id).nil? %>
                        <%= link_to "Love", product_likes_path(like.product), method: :post, remote: true, class: "btn btn-sm"%>
                      <% else %>
                        <%= link_to "UnLove", like_path(like.product.is_liked(current_user)), method: :delete, remote: true, class: "btn btn-sm"%>
                      <% end %>
                    </span>
                  </span>
                  <span class="comments">
                    <i class="fa fa-comments"></i><%= t ".rating" %>
                    <%= like.product.average_point %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-md-2 col-md-offset-5">
      <%= paginate @products %>
    </div>
  </div>